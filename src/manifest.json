{
  "manifest_version": 3,
  "name": "ExplainX - YouTube Transcript Viewer",
  "description": "View YouTube transcripts in a convenient popup",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-34.png",
      "32": "icon-34.png",
      "48": "icon-128.png",
      "128": "icon-128.png"
    },
    "default_title": "ExplainX - Extract YouTube Transcript"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icon-34.png",
    "32": "icon-34.png",
    "48": "icon-128.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
